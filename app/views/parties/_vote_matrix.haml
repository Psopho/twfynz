%table.votematrix
  %thead
    %tr
      %th
      %th{:style=>"text-align: center"}= 'Labour'
      %th{:style=>"text-align: center"}= 'Progressive'.sub('Progressive','Progres- sive')
      %th{:style=>"text-align: center"}= 'NZ First'
      %th{:style=>"text-align: center"}= 'United Future'
      %th{:style=>"text-align: center"}= 'Green'
      %th{:style=>"text-align: center"}= 'Maori Party'.sub('Maori','Māori')
      %th{:style=>"text-align: center"}= 'National'
      %th{:style=>"text-align: center"}= 'ACT'
  %tbody
    - vote_matrix.each do |row|
      %tr
        - %Q|%th{:style=>"width: 6em;"}= row[0][0].short.sub('Maori Party','Māori').sub('Progressive','Progres.').sub('United Future','United F.')|
        %td.logo= party_logo_small(row[0][0])
        = render :partial => 'parties/vote_cell', :object => row.rassoc(Party.labour)
        = render :partial => 'parties/vote_cell', :object => row.rassoc(Party.progressive)
        = render :partial => 'parties/vote_cell', :object => row.rassoc(Party.nz_first)
        = render :partial => 'parties/vote_cell', :object => row.rassoc(Party.united_future)
        = render :partial => 'parties/vote_cell', :object => row.rassoc(Party.green)
        = render :partial => 'parties/vote_cell', :object => row.rassoc(Party.maori)
        = render :partial => 'parties/vote_cell', :object => row.rassoc(Party.national)
        = render :partial => 'parties/vote_cell', :object => row.rassoc(Party.act)
